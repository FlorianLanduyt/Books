<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="normalBtn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/marginNormal</item>
        <item name="android:layout_marginTop">@dimen/marginNormal</item>
        <item name="android:layout_marginEnd">@dimen/marginNormal</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:paddingLeft">@dimen/normalPadding</item>
        <item name="android:paddingTop">@dimen/smallPadding</item>
        <item name="android:paddingRight">@dimen/normalPadding</item>
        <item name="android:paddingBottom">@dimen/smallPadding</item>
        <item name="android:width">@dimen/bigBtn</item>
    </style>

    <style name="listItem_titleText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/marginNormal</item>
        <item name="android:layout_marginTop">@dimen/marginNormal</item>
        <item name="android:layout_marginEnd">@dimen/marginNormal</item>
        <item name="android:textSize">@dimen/titleSize</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="listItem_removeIcon">
        <item name="android:layout_width">42dp</item>
        <item name="android:layout_height">43dp</item>
        <item name="android:layout_marginTop">@dimen/marginNormal</item>
        <item name="android:layout_marginEnd">@dimen/marginNormal</item>
        <item name="android:contentDescription">@string/cd_remove_button</item>
    </style>

    <style name="listDivider">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/divider_height</item>
        <item name="android:layout_marginStart">@dimen/marginNormal</item>
        <item name="android:layout_marginTop">@dimen/marginNormal</item>
        <item name="android:layout_marginEnd">@dimen/marginNormal</item>
        <item name="android:layout_marginBottom">@dimen/marginNormal</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="listItem_authorsText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/marginNormal</item>
        <item name="android:layout_marginTop">@dimen/marginNormal</item>
        <item name="android:layout_marginEnd">@dimen/marginNormal</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

</resources>
